<Page x:Class="Lingoine.Views.WelcomeScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lingoine.Views"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="WelcomeScreen">

    <Grid Background="White">
        <StackPanel>
            <Rectangle Height="20"></Rectangle>
            <TextBlock Name="title" FontSize = "30" Text="Lingoine"  VerticalAlignment = "Center" HorizontalAlignment = "Center" ></TextBlock>
            <Rectangle Height="20"></Rectangle>
            <Button Name="signup" Width="200" Click="signup_Click" Content="Sign Up" VerticalAlignment = "Center" FontSize = "15" HorizontalAlignment = "Center"></Button>
            <Rectangle Height="20"></Rectangle>
            <Button Name="signin" Width="200" Click="signin_Click" Content="Sign In" VerticalAlignment = "Center" FontSize = "15" HorizontalAlignment = "Center"></Button>
            <Rectangle Height="20"></Rectangle>
            <Button Name="explore" Width="200" Click="explore_Click" Content="Explore" VerticalAlignment = "Center" FontSize = "15" HorizontalAlignment = "Center"></Button>
        </StackPanel>


    </Grid>
</Page>
